// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tienda {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  usuario        Usuario  @relation(fields: [tiendaId], references: [id])
  tiendaId       String   @db.ObjectId
  nombreTienda   String
  logo           String
  ubicacion      String
  numeroContacto String
  email          String
  referencia     String
  urlTienda      String
  codigoQr       Boolean  @default(false)
  codigoBarra    Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Usuario {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  nombreUsuario String
  password      String
  nombres       String
  apellidos     String
  tiendas       Tienda[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Lista {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  numero        Int
  items         ItemList[]
  nombreCliente String
  montoTotal    Float      @default(0)
  pagado        Boolean    @default(false)
  completado    Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model ItemList {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  lista      Lista    @relation(fields: [listaId], references: [id])
  listaId    String   @db.ObjectId
  nombre     String
  precio     Float
  cantidad   Float
  montoItem  Float
  medida     String
  voz        String
  status     String
  calculated Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
